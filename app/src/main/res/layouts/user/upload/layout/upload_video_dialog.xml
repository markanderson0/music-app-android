<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_artist_label"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/upload_artist_input"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/back"/>

    <TextView
        android:text="Year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_year_label"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/upload_year_input"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/back"/>

    <TextView
        android:text="Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_events_label"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_events_spinner"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="5dp"
        android:background="@drawable/back"
        android:spinnerMode="dialog"/>

    <TextView
        android:text="Selected Songs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_selected_songs_label"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_selected_songs"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/back"
        android:padding="5dp" />

    <CheckBox
        android:text="Terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_terms_cb"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/upload_btn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:bootstrapText="{fa_upload} Upload Video"
        app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"/>

</LinearLayout>