<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Old Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_old_label"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_height="wrap_content"
        android:id="@+id/password_old_input"
        android:layout_gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textPassword" />

    <TextView
        android:text="New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_new_label"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_height="wrap_content"
        android:id="@+id/password_new_input"
        android:layout_gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textPassword" />

    <TextView
        android:text="Confirm Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_confirm_label"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_height="wrap_content"
        android:id="@+id/password_confirm_input"
        android:layout_gravity="center"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:inputType="textPassword" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_submit_btn"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:bootstrapText="Submit Changes"
        app:paddingEnd="15dp"
        app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="true"/>

</LinearLayout>