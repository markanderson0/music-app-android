<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profile_email_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:text="Email" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/profile_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

    <TextView
        android:id="@+id/profile_dob_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:text="Date of Birth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/profile_day_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:hint="Day"
            android:inputType="number"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/profile_month_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:hint="Month"
            android:inputType="number"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/profile_year_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:hint="Year"
            android:inputType="number"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/profile_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:bootstrapText="Submit Changes"
        app:buttonMode="regular"
        app:paddingEnd="15dp"
        app:showOutline="true" />

</LinearLayout>