<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/signup_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Sign Up using your email address, Facebook or Twitter."
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/signup_fb_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Facebook"
                app:bootstrapText="{fa_facebook-official} Facebook" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/signup_twt_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Twitter"
                app:bootstrapText="{fa_twitter-square} Twitter" />

        </LinearLayout>

        <TextView
            android:id="@+id/signup_username_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Username" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/signup_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/signup_email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Email" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/signup_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/signup_password_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Password" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/signup_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <TextView
            android:id="@+id/signup_gender_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Gender" />

        <RadioGroup
            android:id="@+id/signup_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/signup_female_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:text="Female" />

            <RadioButton
                android:id="@+id/signup_male_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="39dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="Male" />

        </RadioGroup>


        <TextView
            android:id="@+id/signup_dob_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="Date of Birth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/signup_day_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:hint="Day"
                android:inputType="number"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/signup_month_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="Month"
                android:inputType="number"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/signup_year_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:hint="Year"
                android:inputType="number"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/signup_terms_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:text="Terms" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/signup_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:bootstrapBrand="regular"
            app:bootstrapSize="lg"
            app:bootstrapText="Sign Up"
            app:buttonMode="regular"
            app:paddingEnd="15dp"
            app:showOutline="true" />

    </LinearLayout>
</ScrollView>